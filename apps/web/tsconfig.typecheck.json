{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@/lib/auth/better": ["./types/better-auth-stub"],
      "better-auth": ["./types/better-auth-stub"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vitest.config.ts",
    "vitest.setup.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
