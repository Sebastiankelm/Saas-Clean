{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", ".next/**", ".content-collections/**"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "SUPABASE_URL",
        "POSTGRES_URL_NON_POOLING",
        "SUPABASE_JWT_SECRET",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "SUPABASE_SERVICE_ROLE_KEY",
        "POSTGRES_HOST",
        "SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "AUTH_SECRET",
        "FRONTEND_URL",
        "BASE_URL",
        "CONTACT_EMAIL",
        "I18N_DEFAULT_LOCALE",
        "I18N_SUPPORTED_LOCALES",
        "POSTGRES_SSL"
      ]
    },
    "@saas-clean/web#build": {
      "outputs": [".next/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": ["^test:integration"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "outputs": []
    }
  }
}
